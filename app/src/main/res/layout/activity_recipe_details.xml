<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recipe.RecipeDetailsActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_recipe_image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_image_24"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_recipeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/back"
                android:scrollbars="vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintHeight_percent="0.55"
                tools:text="Recipe Name" />

            <TextView
                android:id="@+id/textView_recipeType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/back"
                android:scrollbars="vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintHeight_percent="0.55"
                tools:text="Recipe Type" />

            <TextView
                android:id="@+id/textView_recipeIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/back"
                android:scrollbars="vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintHeight_percent="0.55"
                tools:text="Recipe Ingredients" />

            <TextView
                android:id="@+id/textView_recipeSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/back"
                android:scrollbars="vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintHeight_percent="0.55"
                tools:text="Recipe Steps" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>